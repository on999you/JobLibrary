<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tool="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="?attr/actionBarSize"
    tool:context="com.example.dennislam.myapplication.activity.LanguageActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center"
        android:theme="@style/titleBar"
        android:text="@string/language"
        android:textSize="20sp"
        android:textColor="#FFFFFF"/>

    <TextView
        android:id="@+id/englishLangField"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:drawablePadding="10dp"
        android:text="ENGLISH"
        android:textSize="25sp"
        android:padding="10dp"
        android:onClick="changeEngLang" />

    <TextView
        android:id="@+id/chineseLangField"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:drawablePadding="10dp"
        android:text="繁體中文"
        android:textSize="25sp"
        android:padding="10dp"
        android:onClick="changeChinLang" />


</LinearLayout>